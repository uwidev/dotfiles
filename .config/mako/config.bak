# GLOBAL
max-history=100
sort=-time

# BINDING OPTIONS
on-button-left=dismiss
on-button-middle=none
on-button-right=dismiss-all
on-touch=dismiss
#on-notify=exec mpv /usr/share/sounds/freedesktop/stereo/message.oga

# STYLE OPTIONS
font=Syne 14
width=300
height=100
margin=0
padding=15
border-size=4
border-radius=12
icons=1
max-icon-size=48
icon-location=right
markup=1
actions=1
history=1
text-alignment=left
default-timeout=5000
ignore-timeout=0
max-visible=5
layer=overlay
anchor=bottom-right
background-color=#1e1e2e
text-color=#d9e0ee
border-color=#882266aa
progress-color=over #89b4fa

[urgency=low]
border-color=#595959aa
default-timeout=2000

[urgency=normal]
border-color=#882266aa
default-timeout=5000

[urgency=high]
border-color=#ff44bb
text-color=#ff44bb
default-timeout=0

[category=mpd]
border-color=#f9e2af
default-timeout=2000
group-by=category
